@model MVC_Web_Project.Models.customerDTO


@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@



@using (Html.BeginForm("Create", "Customers", FormMethod.Post))
{

    <div>
        <label colspan="2" align="center">Customer Details</label>
    </div>
    <div class="form-row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.CustomerName, new { @class = "control-label" })
            <div>
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
            </div>
        </div>





    </div>
    <br />
    <div class="form-row">
        <div class="col-md-9"></div>
        <div>
            <input type="submit" value="Submit" class="btn btn-success btn-lg" />
            @*<a href="/customer/" onmouseover="this.style.color='#0f0'"
               onmouseout="this.style.color='#00f'" class="btn btn-primary btn-lg">
                Back
            </a>*@
        </div>
    </div>

}
